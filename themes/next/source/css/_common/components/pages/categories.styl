.category-all-page {
  .category-all-title { text-align: center; }

  .category-all { margin-top: 20px; }

  .category-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .category-list-item { 
  margin: 5px 10px; 
  font-size: 25px;
  }
  .category-list-item>a{ 
  border-bottom: 0px;
  font-size: 25px;

  }

.category-list-item>a:hover{
    background: #f5f2f2
  }

  .category-list-count {
    color: $grey;
    &:before {
      display: inline;
      content: " ("
    }
    &:after {
      display: inline;
      content: ") "
    }
  }

  .category-list-child { padding-left: 10px; }
}
